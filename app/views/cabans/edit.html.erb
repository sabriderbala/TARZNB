<div class="container w-25 p-3">
  <%= simple_form_for [@caban] do |f| %>
    <%= f.input :name, label: "Nom" %>
    <%= f.input :description %>
    <%= f.input :price, label: "Prix par nuit"%>
    <p>Adresse</p>
    <%= f.input :address, as: :hidden, input_html: {data: {address_autocomplete_target: "address"}}, wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}, class: "d-none"%>
    <%  %>
    <%= f.input :photos, as: :file, input_html: {multiple:true}, class: "mr-auto p-2" %>
    <%= f.submit "Update", class: "btn btn-primary p-2" %>
    <%= link_to "Back", dashboard_path, class: "btn btn-primary p-2" %>
  <% end %>
</div>
