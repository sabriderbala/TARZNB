<div class="container p-5">
  <div class="row">
    <% @cabans.each do |caban| %>
        <div class="col-lg-4">
          <%= link_to caban_path(caban), class:"text-decoration-none", style:"color: black" do %>
          <div class="card-trip">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-inner">
                <% caban.photos.each_with_index do |photo, index| %>
                  <% if index == 0 %>
                    <div class="carousel-item active">
                  <% else %>
                    <div class="carousel-item">
                  <% end %>
                    <%= cl_image_tag photo.key, height: 300, width: 500, crop: :fill %>
              </div>
                <% end %>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>

        </div>
          <div class="container mt-3">
            <div class="d-flex justify-content-between border-bottom border-secondary">
              <p class="fw-normal"><%=caban.name %></p>
              <p class="fw-normal"><%= caban.price %>â‚¬</p>
            </div>
            <div class="mt-3">
              <p class="fw-normal fst-italic"><%= caban.address %></p>
              <p class="fw-normal">"<%= caban.description %>"</p>
            </div>

          </div>
        <% end %>
  </div>
    <% end %>
  </div>
</div>
